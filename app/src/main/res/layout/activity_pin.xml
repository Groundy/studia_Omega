<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
								xmlns:tools="http://schemas.android.com/tools"
								xmlns:app="http://schemas.android.com/apk/res-auto"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								tools:context=".PinActivity">

				<LinearLayout
												android:orientation="horizontal"
												android:layout_width="wrap_content"
												android:layout_height="wrap_content"
												app:layout_constraintBottom_toBottomOf="parent"
												app:layout_constraintTop_toTopOf="parent"
												app:layout_constraintEnd_toEndOf="parent"
												app:layout_constraintStart_toStartOf="parent"
												app:layout_constraintVertical_bias="0.259"
												android:id="@+id/linearLayout"
												android:fadeScrollbars="true">

								<EditText
																android:layout_width="@dimen/width_of_pin_digits"
																android:layout_height="@dimen/height_of_pin_digits"
																android:inputType="number|numberPassword"
																android:ems="10"
																android:id="@+id/pid_digit1"
																android:maxLength="1"
																android:layout_marginEnd="@dimen/margin_width_of_pin_digits"
																android:textAlignment="center"
																android:hapticFeedbackEnabled="true"
																tools:ignore="SpeakableTextPresentCheck, LabelFor"
																android:background="@drawable/border_for_digit_field_pin_activity"
																android:importantForAutofill="no"
																android:textSize="34sp" />


								<EditText
																android:layout_width="@dimen/width_of_pin_digits"
																android:layout_height="@dimen/height_of_pin_digits"
																android:inputType="number|numberPassword"
																android:ems="10"
																android:id="@+id/pid_digit2"
																android:maxLength="1"
																android:layout_marginEnd="@dimen/margin_width_of_pin_digits"
																android:textAlignment="center"
																tools:ignore="SpeakableTextPresentCheck, LabelFor"
																android:background="@drawable/border_for_digit_field_pin_activity"
																android:importantForAutofill="no"
																android:textSize="34sp" />

								<EditText
																android:layout_width="@dimen/width_of_pin_digits"
																android:layout_height="@dimen/height_of_pin_digits"
																android:inputType="number|numberPassword"
																android:ems="10"
																android:id="@+id/pid_digit3"
																android:maxLength="1"
																android:layout_marginEnd="@dimen/margin_width_of_pin_digits"
																android:textAlignment="center"
																tools:ignore="SpeakableTextPresentCheck, LabelFor"
																android:background="@drawable/border_for_digit_field_pin_activity"
																android:importantForAutofill="no"
																android:textSize="34sp" />

								<EditText
																android:layout_width="@dimen/width_of_pin_digits"
																android:layout_height="@dimen/height_of_pin_digits"
																android:inputType="number|numberPassword"
																android:ems="10"
																android:id="@+id/pid_digit4"
																android:maxLength="1"
																android:layout_marginEnd="@dimen/margin_width_of_pin_digits"
																android:textAlignment="center"
																tools:ignore="SpeakableTextPresentCheck, LabelFor"
																android:background="@drawable/border_for_digit_field_pin_activity"
																android:scrollbars="none"
																android:importantForAutofill="no"
																android:textSize="34sp" />

								<EditText
																android:layout_width="@dimen/width_of_pin_digits"
																android:layout_height="@dimen/height_of_pin_digits"
																android:inputType="number|numberPassword"
																android:ems="10"
																android:id="@+id/pid_digit5"
																android:maxLength="1"
																android:layout_marginEnd="@dimen/margin_width_of_pin_digits"
																android:textAlignment="center"
																tools:ignore="SpeakableTextPresentCheck, LabelFor"
																android:background="@drawable/border_for_digit_field_pin_activity"
																android:verticalScrollbarPosition="defaultPosition"
																android:importantForAutofill="no"
																android:textSize="34sp" />
				</LinearLayout>

				<TextView
												android:layout_width="wrap_content"
												android:layout_height="wrap_content"
												android:id="@+id/descripitonOnPinAct"
												app:layout_constraintBottom_toTopOf="@+id/linearLayout"
												app:layout_constraintTop_toTopOf="parent"
												app:layout_constraintEnd_toEndOf="parent"
												app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
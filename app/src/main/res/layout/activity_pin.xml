<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
								xmlns:tools="http://schemas.android.com/tools"
								xmlns:app="http://schemas.android.com/apk/res-auto"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								tools:context=".PinActivity">

				<LinearLayout
												android:orientation="horizontal"
												android:layout_width="wrap_content"
												android:layout_height="wrap_content"
												app:layout_constraintBottom_toBottomOf="parent"
												app:layout_constraintTop_toTopOf="parent"
												app:layout_constraintEnd_toEndOf="parent"
												app:layout_constraintStart_toStartOf="parent"
												app:layout_constraintVertical_bias="0.259">

								<EditText
																android:layout_width="@dimen/width_of_pin_digits"
																android:layout_height="@dimen/height_of_pin_digits"
																android:inputType="number"
																android:ems="10"
																android:id="@+id/pid_digit1"
																android:maxLength="1"
																android:layout_marginRight="@dimen/margin_width_of_pin_digits"
																android:textAlignment="center"
																android:hapticFeedbackEnabled="true"
																tools:ignore="SpeakableTextPresentCheck"
																android:background="@drawable/border_for_digit_field_pin_activity" />

								<EditText
																android:layout_width="@dimen/width_of_pin_digits"
																android:layout_height="@dimen/height_of_pin_digits"
																android:inputType="number"
																android:ems="10"
																android:id="@+id/pid_digit2"
																android:maxLength="1"
																android:layout_marginRight="@dimen/margin_width_of_pin_digits"
																android:textAlignment="center"
																tools:ignore="SpeakableTextPresentCheck"
																android:background="@drawable/border_for_digit_field_pin_activity" />

								<EditText
																android:layout_width="@dimen/width_of_pin_digits"
																android:layout_height="@dimen/height_of_pin_digits"
																android:inputType="number"
																android:ems="10"
																android:id="@+id/pid_digit3"
																android:maxLength="1"
																android:layout_marginRight="@dimen/margin_width_of_pin_digits"
																android:textAlignment="center"
																tools:ignore="SpeakableTextPresentCheck"
																android:background="@drawable/border_for_digit_field_pin_activity" />

								<EditText
																android:layout_width="@dimen/width_of_pin_digits"
																android:layout_height="@dimen/height_of_pin_digits"
																android:inputType="number"
																android:ems="10"
																android:id="@+id/pid_digit4"
																android:maxLength="1"
																android:layout_marginRight="@dimen/margin_width_of_pin_digits"
																android:textAlignment="center"
																tools:ignore="SpeakableTextPresentCheck"
																android:background="@drawable/border_for_digit_field_pin_activity" />

								<EditText
																android:layout_width="@dimen/width_of_pin_digits"
																android:layout_height="@dimen/height_of_pin_digits"
																android:inputType="number"
																android:ems="10"
																android:id="@+id/pid_digit5"
																android:maxLength="1"
																android:layout_marginRight="@dimen/margin_width_of_pin_digits"
																android:textAlignment="center"
																tools:ignore="SpeakableTextPresentCheck"
																android:background="@drawable/border_for_digit_field_pin_activity" />
				</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
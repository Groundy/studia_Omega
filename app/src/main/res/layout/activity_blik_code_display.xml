<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".BlikCodeDisplayActivity">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginStart="20dp"
		android:layout_marginTop="10dp"
		android:layout_marginEnd="20dp"
		android:layout_marginBottom="10dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<LinearLayout
			android:id="@+id/BLIKDISPLAY_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<ImageView
				android:id="@+id/BLIKDISPLAY_QR_ImageView"
				android:layout_width="match_parent"
				android:layout_height="@dimen/BLIKDISPLAY_min_QR_DIM"
				android:layout_weight="2"
				android:scaleType="fitCenter"
				tools:srcCompat="@tools:sample/avatars" />

			<Space
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="2" />

			<TextView
				android:id="@+id/BLIKDISPLAY_QR_code_ImageView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="0"
				android:text="000000"
				android:textAlignment="center"
				android:textColor="@color/black"
				android:textSize="@dimen/BLIKDISPLAY_code_Size"
				android:textStyle="bold" />

			<Space
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="2" />

			<Button
				android:id="@+id/BLIKDISPLAY_back_button"
				android:layout_width="match_parent"
				android:layout_height="@dimen/BLIKDISPLAY_ButtonHeight"
				android:layout_weight="0"
				android:maxHeight="@dimen/BLIKDISPLAY_ButtonHeight"
				android:text="@string/BLIKDISPLAY_buttonText" />

		</LinearLayout>
	</FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/Theme.AppCompat.Dialog"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<LinearLayout
		style="@style/AppTheme"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:gravity="center_horizontal"

		android:orientation="vertical"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<Space
			android:layout_width="match_parent"
			android:layout_height="10dp" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<Space
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="16dp"
				android:layout_weight="1"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal|center_vertical"
				android:gravity="center_vertical"
				android:text="zakres dat:"
				android:textColor="@color/black"
				android:textStyle="bold" />

			<Space
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:gravity="center_horizontal"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/FilterAct_dateFrom_textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal|center_vertical"
				android:layout_marginStart="8dp"
				android:layout_weight="1"
				android:width="150dp"
				android:height="50dp"
				android:background="@drawable/main_frame"
				android:gravity="center_horizontal|center_vertical"
				android:minWidth="150dp"
				android:minHeight="50dp"
				android:text="05-08-2022"
				android:textColor="@color/black"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/textView3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal|center_vertical"
				android:layout_weight="1"
				android:height="50dp"
				android:gravity="center_horizontal|center_vertical"
				android:minWidth="30dp"
				android:minHeight="10dp"
				android:text="-"
				android:textColor="@color/black" />

			<TextView
				android:id="@+id/FilterAct_dateTo_textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal|center_vertical"
				android:layout_marginEnd="10dp"
				android:layout_weight="1"
				android:width="150dp"
				android:height="50dp"
				android:background="@drawable/main_frame"
				android:gravity="center_horizontal|center_vertical"
				android:minWidth="150dp"
				android:minHeight="50dp"
				android:text="05-08-2022"
				android:textColor="@color/black"
				android:textStyle="bold" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<Space
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1" />

			<TextView
				android:id="@+id/textView2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal|center_vertical"
				android:gravity="center|center_horizontal|center_vertical"
				android:text="kwota:"
				android:textColor="@color/black"
				android:textStyle="bold" />

			<Space
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:gravity="center_horizontal"
			android:orientation="horizontal">

			<EditText
				android:id="@+id/FilterAct_minAmount_editText"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_gravity="center_horizontal|center_vertical"
				android:layout_marginStart="8dp"
				android:layout_weight="1"
				android:width="150dp"
				android:height="50dp"
				android:background="@drawable/main_frame"
				android:ems="10"
				android:gravity="center_horizontal|center_vertical"
				android:inputType="numberDecimal"
				android:minWidth="150dp"
				android:minHeight="50dp"
				android:textColor="@color/black"
				tools:ignore="SpeakableTextPresentCheck" />

			<TextView
				android:id="@+id/textView5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal|center_vertical"
				android:layout_weight="1"
				android:height="50dp"
				android:gravity="center_horizontal|center_vertical"
				android:minWidth="30dp"
				android:minHeight="50dp"
				android:text="-"
				android:textColor="@color/black" />

			<EditText
				android:id="@+id/FilterAct_maxAmount_editText"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_gravity="center_horizontal|center_vertical"
				android:layout_marginEnd="10dp"
				android:layout_weight="1"
				android:width="150dp"
				android:height="50dp"
				android:background="@drawable/main_frame"
				android:ems="10"
				android:gravity="center_horizontal|center_vertical"
				android:importantForAutofill="no"
				android:inputType="numberDecimal"
				android:minWidth="150dp"
				android:minHeight="50dp"
				android:textColor="@color/black"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				tools:ignore="SpeakableTextPresentCheck" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:gravity="center_horizontal">

			<Button
				android:id="@+id/FilterAct_cancel_Button"
				style="@style/OmegaButtonStyle"
				android:text="Anuluj" />

			<Button
				android:id="@+id/FilterAct_apply_Button"
				style="@style/OmegaButtonStyle"
				android:text="Zastosuj" />

		</LinearLayout>

		<Space
			android:layout_width="match_parent"
			android:layout_height="10dp" />

	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
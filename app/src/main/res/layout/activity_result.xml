<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:background="@color/colorPrimary"
	android:layout_height="match_parent"
	tools:context="com.example.omega.ResultActivity">

	<FrameLayout
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="@dimen/marginSizeY"
		android:layout_marginTop="@dimen/marginSizeX"
		android:layout_marginEnd="@dimen/marginSizeY"
		android:layout_marginBottom="@dimen/marginSizeX"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<ImageView
				android:id="@+id/result_imageView"
				android:layout_width="match_parent"

				android:layout_height="280dp"
				app:srcCompat="@drawable/ico_success" />

			<TextView
				android:id="@+id/result_TextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center"
				android:text="TextView"
				android:textSize="34sp" />

			<Button
				android:id="@+id/result_backButton"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:text="PowrÃ³t"/>

		</LinearLayout>

	</FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	style="@style/AppTheme"
	android:layout_height="match_parent"
	tools:context="com.example.omega.ResultActivity">

	<FrameLayout
		style="@style/frameLayoutStyle"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<ImageView
				android:id="@+id/result_imageView"
				android:layout_width="match_parent"

				android:layout_height="280dp"
				app:srcCompat="@drawable/ico_success" />

			<TextView
				android:id="@+id/result_TextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center"
				android:text="TextView"
				android:textSize="34sp" />

			<Button
				android:id="@+id/result_backButton"
				style="@style/OmegaButtonStyle"
				android:text="PowrÃ³t" />

			<Space
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_marginStart="16dp"
				android:layout_marginLeft="16dp"
				android:layout_weight="99"
				app:layout_constraintStart_toStartOf="parent" />

		</LinearLayout>

	</FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
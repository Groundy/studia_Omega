<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	package="omega">

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">
		<activity
			android:name="omega.RBlikCodeDisplayActivity"
			android:exported="false" />
		<activity
			android:name="omega.RBLIKCodeCreator"
			android:exported="false" />
		<activity
			android:name="omega.UserPermissionList"
			android:exported="false"
			android:label="@string/title_activity_settings"
			android:theme="@style/Theme.AppCompat.Dialog" />
		<activity
			android:name="omega.OAuth"
			android:exported="false"
			android:label="@string/title_activity_settings"
			android:windowSoftInputMode="adjustPan" />
		<activity
			android:name="omega.TransferSummary"
			android:exported="false"
			android:label="@string/title_activity_settings"
			android:windowSoftInputMode="adjustPan" />
		<activity
			android:name="omega.ResultActivity"
			android:exported="false"
			android:label="@string/title_activity_settings"
			android:windowSoftInputMode="adjustPan" />
		<activity
			android:name="omega.BasicTransferActivity"
			android:exported="false"
			android:label="@string/title_activity_settings"
			android:windowSoftInputMode="adjustPan" />
		<activity
			android:name="omega.PinActivity"
			android:exported="false"
			android:label="@string/title_activity_settings"
			android:windowSoftInputMode="adjustPan" />
		<activity
			android:name="omega.CancelBioAuthDialogActivity"
			android:exported="false"
			android:label="@string/title_activity_settings"
			android:theme="@style/Theme.AppCompat.Light.Dialog.Alert"
			android:windowSoftInputMode="adjustPan" />
		<activity
			android:name="omega.ScanFingerActivity"
			android:exported="false"
			android:label="@string/title_activity_settings"
			android:windowSoftInputMode="adjustPan" />
		<activity
			android:name="omega.SettingsActivity"
			android:exported="false"
			android:label="@string/title_activity_settings" />
		<activity
			android:name="omega.QrScannerActivity"
			android:exported="false"
			android:label="@string/title_activity_QrScanner"
			android:theme="@style/NoActionBar" />
		<activity
			android:name="omega.MainActivity"
			android:label="@string/app_name"
			android:windowSoftInputMode="stateAlwaysVisible">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.nfc.action.NDEF_DISCOVERED" />
				<action android:name="android.nfc.action.TAG_DISCOVERED" />

				<data android:mimeType="text/plain" />
			</intent-filter>
			<intent-filter tools:ignore="AppLinkUrlError"> <!-- TESTTESTESTTESTTESTETSTEST$ETSEST -->
				<action android:name="android.intent.action.VIEW" />

				<data
					android:host="oauthdemo.developer.aliorbank.pl"
					android:scheme="https" />
			</intent-filter> <!-- TESTTESTESTTESTTESTETSTEST$ETSEST -->

			<meta-data
				android:name="android.nfc.action.TECH_DISCOVERED"
				android:resource="@xml/techlist" />
		</activity>
	</application>

	<uses-feature android:name="android.hardware.nfc" />
	<uses-permission android:name="android.permission.USE_BIOMETRIC" />
	<uses-permission android:name="aandroid.permission.INTERNET" />
	<uses-permission android:name="android.permission.USE_FINGERPRINT" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.CAMERA" />

	<uses-permission android:name="android.permission.NFC" />

</manifest>